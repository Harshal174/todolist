<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDoList</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box" style="border-radius: 5px;">


      <%  newListItems.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <button class="delete-btn" type="submit" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">Delete</button>
                <input type="checkbox" name="completedCheckbox" value="<%=item._id%>" onChange="this.form.submit()">
                <p><%=item.name%></p>
            </div>
        <%})%>
        <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
        <!-- <%  for(var i=0;i<newListItems.length;i++){ %>
        
        <% } %> -->
        
        <a class="completed-tag" href="/complete/<%=listTitle%>">Completed Tasks</a>
        <!-- <% completedItems.forEach(function(item){ %>
            <div class="completed-item">
                <p><%=item.name%></p>
            </div>
        <% }) %> -->
        
        <a href="/" class="homepage-tag" >HomePage</a>
        <form action="/delete-list" method="post">
            <button class="delete-list-btn"  type="submit" name="deleteList" value="<%=listTitle%>" onChange="this.form.submit()">Delete List</button>
        </form>
    
        <form class="" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%=listTitle%>>+</button>
        </form>
        
    </div>

    

  

</body>
</html>